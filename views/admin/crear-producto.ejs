<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/producto.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<div class="container">
    <div class="my-5">

    <form action="/admin/<% if (modoEdicion) { %>editar-producto<% } else { %>crear-producto<% } %>" method="POST">
        <div class="container-productos">
            <h2 class="pb-4 mb-3">
                <% if (modoEdicion) { %>
                    <%= 'Modifique los datos del producto' %>
                <% } else{ %>
                    <%= 'Agregar nuevos productos' %>
                <% } %> 
            </h2>
            <div class="row justify-content-between">
                <div class="col-lg-6 ">
                    <div class="form-group">
                        <label>Nombre del producto</label><br>
                        <!--<input type="nombreproducto" name="nombre">-->
                        <input type="text" name="nombre" id="nombre" value="<% if (modoEdicion) { %><%= producto.nombre %><% } %>">
                    </div>

                    <div class="form-group">
                        <label>Descripción</label><br>
                        <textarea name="descripcion" id="descripcion" rows="10" cols="50"><% if (modoEdicion) { %><%= producto.descripcion %><% } else{'escriba una descripcion'}%></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label>Categoria</label><br>
                        <select name="categoria">
                          <option value="Café" selected>café</option>
                          <option value="Sandwich" >sandwich</option>
                          <option value="Postre">postre</option>
                      </select>
                  </div>

                    <div class="form-3-group">
                        <div class="row row-cols-2 row-cols-lg-3 g-2 g-lg-3">
                            <div class="col s-group">
                                <label>Precio</label>
                                <input type="number" name="precio" id="precio" value="<% if (modoEdicion) { %><%= producto.precio %><% } %>"><br />
                            </div>
                            <div class="col s-group">
                                <label>Precio promocional</label>
                                <input type="number" name="precioPromo" id="precioPromo" value="<% if (modoEdicion) { %><%= producto.precioPromo %><% } %>"/><br />
                            </div>
                            <div class="col s-group">
                                <label>Disponibilidad</label>
                                <input type="text" name="stock" id="stock" value="<% if (modoEdicion) { %><%= producto.stock %><% } %>"/><br />
                            </div>
                        </div>
                    </div>
     
                </div>
            
                <div class="col-lg-5">
                    <div class="download-image">
                        <p><label for="imageFile">Selecciona algunas imágenes(Ingresa URL):</label></p>
                        <p><input type="text" id="imageFile"  name="urlImagen" value="<% if (modoEdicion) { %><%= producto.urlImagen %><% } %>"></p>
                    </div>
                </div>
           
            <% if (modoEdicion) { %>
                <input type="hidden" value="<%= producto._id %>" name="idProducto">
            <% } %>

            <!-- Checkbox arriba del botón -->
            <div class="form-groupCheckbox">
                <input type="checkbox" id="checkbox" name="favorito" class="checkbox-style" 
                       <% if (modoEdicion && producto.favorito) { %> checked <% } %> >
                <label for="checkbox" class="checkbox-label">¿Es un Producto Favorito?</label>
            </div>

            <div class="group mt-4">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary"><% if (modoEdicion) { %>Actualizar Producto<% } else { %>Crear Producto<% } %></button>
            </div>

        </div>
    </div>
</form>

</div>
</div>
<!--fin container-->

<%- include ('../includes/end.ejs') %>



