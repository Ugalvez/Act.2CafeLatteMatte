
<%- include ('includes/head.ejs') %>
<link rel="stylesheet" href="/css/producto.css">
</head>
<body>

<%- include ('includes/navigation.ejs') %>

    <main>

        <% if(prods.length > 0) { %>

            
            <div class="grid">
                <% for (let producto of prods) { %>
                    <article class ="card product-item">
                        <header class="card_header">
                            <h1 class="product_title"><%= producto.nombre %></h1>
                        </header>
                        <div class="card_image">
                            <img src="<%= producto.urlImagen%>"  alt="">
                        </div>

                        <div class="card_content">
                            <h2 class="product_price">S/.<%= producto.precio%></h2>
                            <p class="product_description">Descripci√≥n: <%= producto.descripcion%></p>
                            <p class="product_disponibilidad"> Stock <%= producto.disponibilidad%> unidades</p>
                          <p class="product_categoria"> <%= producto.categoria%></p>
                        </div>


                        <!--<div class = "card_actions">
                            
                            <form action = "/agregar-carrito " method="POST">
                            <button class="btn" >Agregar al Carrito</button>
                        </form>
                        </div>-->

                        <%- include('includes/agregar-al-carrito.ejs', {producto: producto})%>

                    </article>
                        
                <% } %>
            </div>
        <% } else { %>
            <h1>No hay productos</h1>
       <% } %>
 
    </main>
    
    <%- include ('includes/end.ejs') %>