
<%- include ('includes/head.ejs') %>
<link rel="stylesheet" href="/css/producto.css">
</head>
<body>



<%- include ('includes/navigation.ejs') %>


<section class="imagen-destacada">
   
</section>

    <main>

        <% if(prods.length > 0) { %>


            <div class="grid">
                <% for (let producto of prods) { %>
                    <article class ="card product-item">
                        <header class="card_header">
                            <h1 class="product_title"><%= producto.nombre %></h1>
                        </header>
                        <div class="card_image">
                            <img src="<%= producto.urlImagen%>" alt="Libro HP">
                        </div>

                        <div class="card_content">
                            <h2 class="product_price">S/.<%= producto.precio%></h2>
                            <h1 class="promo_price"> Precio en Promoción S/<%= producto.precioPromo %> </h1>
                            <p class="product_description">Descripción: <%= producto.descripcion%></p>
                            <p class="product_disponibilidad"> Stock <%= producto.stock%> unidades</p>
                            <p class="product_categoria"> categoria: <%= producto.categoria%></p>
                        </div>
                        <a href="/productos/<%= producto.id %>" class="btn btn-primary"> Detalles</a>
                        <!--<div class = "card_actions">
                            <button class="btn">Agregar al Carrito</button>
                        </div>-->
                        <%- include('includes/agregar-al-carrito.ejs', {producto: producto})%>
                    </article>
                        
                <% } %>
            </div>
        <% } else { %>
            <h1>No hay productos</h1>
       <% } %>
 
    </main>
    
    <%- include ('includes/end.ejs') %>